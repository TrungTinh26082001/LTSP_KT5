<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="18"
    android:layout_margin="50dp"
    tools:context=".ListViewMainActivity">

    <Button
        android:id="@+id/button2"
        android:onClick="Listview1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/khuong_buttonkt3"
        android:layout_marginLeft="70dp"
        android:text="ListView 1" />

    <Button
        android:id="@+id/button3"
        android:onClick="Listview2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/khuong_buttonkt3"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="ListView 2" />

    <Button
        android:id="@+id/button4"
        android:onClick="Listview3"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/khuong_buttonkt3"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginLeft="70dp"
        android:text="ListView 3" />
    <Button
        android:id="@+id/button5"
        android:onClick="Listview4"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/khuong_buttonkt3"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:text="ListView 4" />
</LinearLayout>